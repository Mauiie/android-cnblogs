<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            style="@style/AppToolBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:background="@drawable/bg_default_action_bar">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <!--    <ImageView
                        android:id="@android:id/home"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:paddingRight="20dp"
                        android:src="@drawable/ic_back"/>-->

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_blog_avatar"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/bg_user_avatar"
                    android:scaleType="fitCenter"
                    app:riv_corner_radius="26dp"/>


                <com.rae.cnblogs.widget.RaeTextView
                    android:id="@+id/tv_blog_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="RAE敲代码"
                    android:textColor="@color/ph2"
                    android:textSize="12sp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_action_bar_more"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/default_margin"
                    android:src="@drawable/ic_action_bar_more"/>
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <!--内容区域-->
            <FrameLayout
                android:id="@+id/fl_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"/>

            <!--评论区域-->
            <com.rae.cnblogs.widget.RaeDrawerLayout
                android:id="@+id/fl_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_blog_content_bottom_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/default_margin"
            android:paddingRight="@dimen/default_margin">

            <TextView
                android:id="@+id/button"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_write_comment"
                android:paddingBottom="6dp"
                android:paddingLeft="21dp"
                android:paddingRight="21dp"
                android:paddingTop="6dp"
                android:text="@string/edit_comment"
                android:textColor="@color/ph2"
                android:textSize="@dimen/h2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/layout_content_comment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_content_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_comment_normal"/>

                    <TextView
                        android:id="@+id/tv_comment_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginTop="-5dp"
                        android:layout_toRightOf="@+id/img_content_comment"
                        android:background="@drawable/bg_badge"
                        android:gravity="center"
                        android:minWidth="14dp"
                        android:paddingBottom="1dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="1dp"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:visibility="gone"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_content_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_like_content"/>

                    <TextView
                        android:id="@+id/tv_like_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginTop="-5dp"
                        android:layout_toRightOf="@+id/img_content_like"
                        android:background="@drawable/bg_badge"
                        android:gravity="center"
                        android:minWidth="14dp"
                        android:paddingBottom="1dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingTop="1dp"
                        android:text="6"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:visibility="gone"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_content_bookmarks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_favorite"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>