<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="actionBarDivider">@color/transparent</item>
        <item name="actionBarStyle">@style/AppActionBar</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="buttonStyle">@style/AppButton</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/AppAnimation</item>

    </style>


    <style name="AppTheme.Dark">
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="AppButton" parent="@style/Widget.AppCompat.Button">
    </style>

    <style name="AppActionBar" parent="Base.Widget.AppCompat.ActionBar.Solid">

    </style>

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SlideDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/SlideAnimation</item>
    </style>

    <style name="SlideDialog.Comment">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppAnimation" parent="Animation.AppCompat.DropDownUp">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="SlideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="ShareIcon">
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:layout_marginBottom">22dp</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:textColor">@color/ph1</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
        <item name="contentInsetStartWithNavigation">0dp</item>

    </style>

    <style name="progress_bar_web" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_web_view</item>
        <item name="android:minHeight">2dp</item>
    </style>

</resources>
