<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CnblogsButton" parent="@android:attr/buttonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="CnblogsButton.Blue">
        <item name="android:background">@drawable/comm_btn_blue</item>
    </style>

    <style name="CnblogsButton.Disable">
        <item name="android:background">@drawable/comm_btn_disable</item>
    </style>

    <style name="CnblogsEditText" parent="@android:style/Widget.EditText"></style>

    <style name="CnblogsEditText.White">
        <item name="android:textSize">@dimen/activity_default_size</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="tab_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">5dip</item>
        <item name="android:enabled">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:enabled">false</item>
    </style>

</resources>