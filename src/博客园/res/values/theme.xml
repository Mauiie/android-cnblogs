<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <!-- <item name="android:actionBarSize">@dimen/actionbar_size</item> -->
        <item name="android:windowAnimationStyle">@style/AppTheme.Animation</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.Text</item>
        <item name="android:background">@color/actionbar</item>
    </style>

    <style name="AppTheme.ActionBar.Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ActivityTheme" parent="@style/AppTheme"></style>

    <style name="ActivityTheme.NoTilteBar" parent="@style/ActivityTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ActivityTheme.FullScreen" parent="@style/ActivityTheme.NoTilteBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 窗口动画 -->
    <style name="AppTheme.Animation">
        <item name="android:activityOpenEnterAnimation">@anim/push_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/push_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/push_out_right</item>
    </style>

</resources>